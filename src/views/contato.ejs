<%- include('./includes/head.ejs')%>
    <%- include('./includes/nav.ejs')%>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 my-3">
                        <h1 class="text-center">Cadasto de contato</h1>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <%- include('./includes/menssagens.ejs')%>
                                <form action="/contato/cadastro" method="post">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                    <div class="form-group align-items-center w-50 p-3">
                                        <label>Nome: </label>
                                        <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
                                    </div>
                                    <div class="form-group align-items-center w-50 p-3">
                                        <label>Sobrenome: </label>
                                        <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome">
                                    </div>
                                    <div class="form-group align-items-center w-50 p-3">
                                        <label>Email: </label>
                                        <input value="<%= contato.email %>" type="email" class="form-control" name="email">
                                    </div>
                                    <div class="form-group align-items-center w-50 p-3">
                                        <label>Telefone:</label>
                                        <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Salvar</button>
                                </form>
                        </div>
                    </div>

                </div>
            </div>

        </section>
        <%- include('./includes/footer.ejs')%>